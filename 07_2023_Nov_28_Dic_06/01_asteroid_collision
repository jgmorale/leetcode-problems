https://leetcode.com/problems/asteroid-collision/

class Solution {
    public int[] asteroidCollision(int[] asteroids) {
        // input [5,4,3,2,1,-3]
        // output [5,4]

        // input [-10,-9,5,4,3]
        // output [-10,-9,5,4,3] they will never collide

        // First thinking: Start from right to left, and search for negative numbers
        // Keep adding the elements on output array until you find a negative number
        // If you find a negative number, add it to a monotonic stack
        // If you find another negative number, keep the monotonic stack
        int n = asteroids.length - 1;
        Stack<Integer> stack = new Stack<Integer>();
        Stack<Integer> output = new Stack<Integer>();
        for(int i = n; i >= 0; i--){
            // Keep monotonic stack
            if(asteorids[n] < 0){
                while(!stack.isEmpty() && stack.peek() > asteroids[n]) stack.pop();
                stack.push(asteroids[n]);
                continue;
            }

            // compare postivie asteroids vs negative ones
            // destoy asteroids and add/remove asteroids from output
            while(!stack.isEmpty()){

            }
            
            output.push(asteroids[n]);
        }

        // reverse the order of the elements in the output array
        int[] out = new int[output.size()];
        for(int i = 0; i < output.size(); i++){
            out[i] = output.pop();
        }

        return out;
    }
}
